    {
      // Create the indices before the content items so they are indexed automatically.
      "name": "lucene-index",
      "Indices": [
        {
          "Search": {
            "AnalyzerName": "standardanalyzer",
            "IndexLatest": false,
            "IndexedContentTypes": [
              "Article",
              "Blockquote",
              "Blog",
              "BlogPost",
              "Container",
              "Image",
              "LinkMenuItem",
              "Menu",
              "Page",
              "Paragraph",
              "Product",
              "RawHtml"
            ],
            "Culture": "any"
          }
        }
      ]
    },
    {
      // Create the search settings.
      "name": "Settings",
      "LuceneSettings": {
        "SearchIndex": "Search",
        "DefaultSearchFields": [
          "Content.ContentItem.FullText"
        ]
      }
    },
    {
      "name": "Queries",
      "Queries": [
        {
          "Index": "Search",
          "Template": "{\r\n  \"query\": {\r\n    \"term\": { \"Content.ContentItem.ContentType\": \"Product\" }\r\n  },\r\n  \"sort\": {\r\n    \"Content.ContentItem.CreatedUtc\": {\r\n      \"order\": \"desc\",\r\n      \"type\": \"double\"\r\n    }\r\n  },\r\n  \"size\": 20\r\n}\r\n",
          "ReturnContentItems": true,
          "Name": "Products",
          "Source": "Lucene",
          "Schema": null
        }
      ]
    },
    {
      // Create the search index permissions.
      "name": "Roles",
      "Roles": [
        {
          "Name": "Anonymous",
          "Description": "Anonymous role",
          "Permissions": [
            "ViewContent",
            "QueryLuceneSearchIndex"
          ]
        }
      ]
    },
